# Database configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/app

# Redis configuration
REDIS_URL=redis://redis:6379/0

# BetterAuth configuration
AUTH_SERVICE_URL=http://auth:4000/api/auth
BETTER_AUTH_CLIENT_ID=backend-service
BETTER_AUTH_CLIENT_SECRET=backend-service-secret
BETTER_AUTH_TOKEN_CLEANUP_INTERVAL=3600
BETTER_AUTH_CONNECTION_TIMEOUT=5
BETTER_AUTH_CACHE_TTL=300

# Application configuration
SECRET_KEY=your-secret-key
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS
CORS_ORIGINS=http://localhost:3000,http://frontend:3000